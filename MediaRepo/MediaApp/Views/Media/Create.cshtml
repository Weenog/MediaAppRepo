
@model MediaCreateViewModel

<br />
<strong>Add new Media Here.</strong>



<form asp-controller="media" asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" />
    </div>

    <div class="form-group">
        <label asp-for="Creator">Creator</label>
        <input asp-for="Creator" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Initial Release</span>
        </div>
        <input type="datetime" asp-for="Date" class="form-control">
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Rating (0-10)</span>
        </div>
        <input asp-for="Rating" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Category"></label>
        <select asp-for="@Model.CategoryId" asp-items="@Model.Category">
        </select>
    </div>


    <div class="container">
        <label asp-for="Watched"> Watched</label>
        <input type="checkbox" asp-for="Watched" checked="checked">
        <span class="checkmark"></span>
    </div>

    <button class="btn-success" type="submit">Create</button>

</form>




