
@model MediaEditViewModel;
    <br />
    <strong>This is the EDIT page.</strong>

    <form asp-controller="media" asp-action="Edit" method="post">

        <div class="form-group">
            <label asp-for=" Description"></label>
            <input asp-for="Description" />
        </div>

        <div class="form-group">
            <label asp-for="Date"></label>
            <input type="datetime-local" asp-for="Date" />
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Rating</span>
            </div>
            <input asp-for="Rating" type="text" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Category"></label>
            <select asp-for="@Model.CategoryId" asp-items="@Model.Category">
            </select>

        </div>

        <button class="btn-success" type="submit">Save Changes</button>
    </form>