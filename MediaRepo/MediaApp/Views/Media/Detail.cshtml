@model MediaDetailViewModel;

<br />
<strong></strong>

<div class="jumbotron">
    <div class="container">
        <div class="Title">
            @Model.Title
        </div>


    </div>
    <div class="grid-container">
        <div class="Photo">
            <img src="@Model.PhotoUrl" class="photo-url" />
        </div>

        <div class="Description">
            @Model.Description
        </div>
    </div>



    <div class="Functions">
        <p>
            |
            <a asp-controller="media" asp-action="edit" asp-route-id="@Model.Id"> Edit</a> |
            <a asp-controller="media" asp-action="delete" asp-route-id="@Model.Id"> Delete</a> |
            <a asp-controller="media" asp-action="index">Media Index</a>
        </p>
    </div>
</div>

<div class="my-3 p-3 btn-group-lg rounded shadow-sm">

    <form asp-controller="media" asp-action="review" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <label asp-for="Comment">Review this Title (@@username)</label>
            <textarea asp-for="Comment" class="form-control" rows="2"></textarea>

            <span class="stars-container stars-0" style="font-size:25px; position:relative; left:77%;">★★★★★</span>
            <button class="btn btn-outline-light btn btn" style="position:relative; left:77%; background-color:#6b767b"
                    type="submit">
                Submit Review
            </button>
    </form>
</div>
<h6 class="border-bottom border-gray pb-2 mb-0">Recent Reviews</h6>
<h>@Model.Reviews.Count Reviews</h>
<div class="media text-muted pt-3">

    @foreach (MediaApp.Domain.Review review in Model.Reviews)
    {
        <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><title>Placeholder</title><rect width="100%" height="100%" fill="#53767b" /><text x="50%" y="50%" fill="#53767b" dy=".3em"></text></svg>
        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <strong class="d-block text-gray-dark">
                @@username
                <span class="stars-container stars-70" style="position:relative; left:85%;">★★★★★</span>
                <h>@review.Comment</h>
            </strong>
        </p>
        <form>
            <td class="btn-group" role="group" aria-label="Basic example">
                <a asp-controller="media" asp-action="deletereview" asp-route-Mediaid="@review.MediaId"  class="btn btn-outline-light">Remove</a>
            </td>
            <td class="btn-group" role="group" aria-label="Basic example">
                <a asp-controller="media" asp-action="editreview" asp-route-id="@review.MediaId" class="btn btn-outline-light">Edit</a>
            </td>
        </form>

        
    }
</div>

